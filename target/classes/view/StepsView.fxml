<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane prefWidth="1120" prefHeight="720"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fitbuddy.controller.StepsController"
            styleClass="page">

    <center>
        <VBox spacing="14" styleClass="content">

            <HBox spacing="10">
                <Label text="ðŸš¶ Steps Log" styleClass="h1"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back" onAction="#back" styleClass="btn"/>
            </HBox>

            <VBox spacing="12" styleClass="card">
                <Label text="Add Steps Entry" styleClass="h2"/>
                <HBox spacing="12">
                    <DatePicker fx:id="datePicker" prefWidth="220"/>
                    <TextField fx:id="stepsField" promptText="Steps (e.g. 8400)" prefWidth="220"/>
                    <Button text="Add" onAction="#addSteps" styleClass="btn-primary"/>
                    <Button text="Delete Selected" onAction="#deleteSelected" styleClass="btn"/>
                </HBox>
                <Label fx:id="msgLabel" text="" styleClass="muted"/>
            </VBox>

            <VBox spacing="10" styleClass="card">
                <Label text="History" styleClass="h2"/>
                <TableView fx:id="table" prefHeight="420">
                    <columns>
                        <TableColumn text="Date" prefWidth="300">
                            <cellValueFactory><PropertyValueFactory property="date"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Steps" prefWidth="300">
                            <cellValueFactory><PropertyValueFactory property="steps"/></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

</BorderPane>
